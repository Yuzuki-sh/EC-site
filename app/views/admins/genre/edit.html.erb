<h2 class="ml-5 pl-5">ジャンル編集</h2>
<div class="ml-5 mt-5">
    <%= form_for @genre, url: admins_genre_path do |f| %>
        <%= render 'layouts/error', model: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効" %>
        <%= f.submit "変更を保存する", class:"btn btn-primary" %>
    <% end %>
</div>
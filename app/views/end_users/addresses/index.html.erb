<h3>配送先登録/一覧</h3>
<%= form_for @address, url: end_users_addresses_path do |f| %>
    <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %> <br>
    <%= f.text_field :postal_code %> <br>
    <%= f.label :address, "住所" %> <br>
    <%= f.text_field :address %> <br>
    <%= f.label :name, "宛名" %> <br>
    <%= f.text_field :name %> <br>
    <%= f.submit "登録する" %>
<% end %>
<table class="table mt-3 ml-5 pl-5" style="width:50%;margin:0 auto">
<tr>
    <th class="table-secondary">郵便番号</th>
    <th class="table-secondary">住所</th>
    <th class="table-secondary">宛名</th>
    <th class="table-secondary" style="width:230px"></th>
</tr>
<% @addresses.each do |address| %>
    <% if address.end_user_id == current_end_user.id %>
        <tr>
            <th>
                <%= address.postal_code %>
            </th>
            <td>
                <%= address.address %>
            </td>
            <td>
                <%= address.name%>
            </td>
            <td>
                <%= link_to "編集する",edit_end_users_address_path(address), class:"btn btn-success" %>
                <%= link_to "削除する", end_users_address_path(address), :method => :delete, class:"btn btn-danger" %>
            </td>
        </tr>
    <% end %>
<% end %>
</table>
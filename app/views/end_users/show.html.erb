<h1 style="margin-left:200px;">マイページ</h1>
<h4 class="ml-5 d-inline">登録情報</h4>
<%= link_to "編集する",edit_end_user_registration_path,class: "btn btn-primary d-inline ml-2 mr-2" %>
<p class="btn btn-primary d-inline">パスワードを変更する</p>
<table class="mt-3 ml-5 table border-right" style="width:90%;">
    <tr>
        <th class="table-secondary" style="width:100px;">氏名</th>
        <th style="width:150px"><%= @user.last_name %> <%= @user.first_name %></th>
    </tr>    
    <tr>
        <th class="table-secondary" style="width:100px;">カナ</th>
        <th style="width:150px"><%= @user.last_name_kana %> <%= @user.first_name_kana %></th>
    </tr>
    <tr>
        <th class="table-secondary" style="width:100px;">郵便番号</th>
        <th style="width:150px"><%= @user.postal_code %></th>
    </tr>
    <tr>
        <th class="table-secondary" style="width:100px;">住所</th>
        <th style="width:150px"><%= @user.address %></th>
    </tr>
    <tr>
        <th class="table-secondary" style="width:100px;">電話番号</th>
        <th style="width:150px"><%= @user.telephone_number %></th>
    </tr>
    <tr class="border-bottom">
        <th class="table-secondary" style="width:100px;">メールアドレス</th>
        <th style="width:150px"><%= @user.email %></th>
    </tr>
</table>
<h2 class="ml-5 d-inline mr-5">配送先</h2>
<p class="btn btn-primary d-inline">一覧を見る</p>
<div class="m-4"></div>
<h2 class="ml-5 d-inline mr-3">注文履歴</h2>
<p class="btn btn-primary d-inline">一覧を見る</p>